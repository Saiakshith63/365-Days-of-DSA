problem 1 : largest element in the array 
-----------------------------------------

from typing import List


class Solution:
    def largest(self, arr):
        n=len(arr)
        largest=arr[0]
        for i in range(n):
            if arr[i]>largest:
                largest = arr[i]
        return largest        
        

problem 2 : second largest element in array
----------------------------------------------

class Solution:
    def getSecondLargest(self, arr):
        # Code Here
        n=len(arr)
        largest=arr[0]
        slargest= -1
        for i in range(n):
            if arr[i]>largest:
                slargest=largest
                largest=arr[i]
            elif arr[i]<largest and arr[i]>slargest:
                slargest=arr[i]
        return slargest  
